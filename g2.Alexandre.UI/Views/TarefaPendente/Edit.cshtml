@model g2.Alexandre.Domain.TarefaPendente
<div class="form-horizontal">
    <form action="Edit" method="POST">
        <div class="form-group">
            <label></label>
            <input class="form-control"
                    type="hidden"
                    name="id"
                    value="@Model.id"/>
        </div>
        <div class="form-group">
            <label>Prioridade da Execução</label>
            <input class="form-control"
                    type="text"
                    name="prioridade"
                    value="@Model.prioridade"/>
        </div>
        <div class="form-group">
            <label>Nome da Tarefa</label>
            <input class="form-control"
                    type="text" 
                    name="nomeTarefa"
                    value="@Model.nomeTarefa"/>
        </div>
        <div class="form-group">
            <label>Data da Execução</label>
            <input class="form-control"
                    type="text" 
                    name="dataExec"
                    value="@Model.dataExec"/>
        </div>
        <div class="form-group">
            <label>Porcentagem da Execução</label>
            <input class="form-control"
                    type="text" 
                    name="percentual"
                    value="@Model.percentual"/>
        <input class="btn btn-primary"
                type="submit" value="Salvar"/>
    </form>
</div>